generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String      @id @default(uuid())
  name             String
  email            String      @unique
  password         String
  tokenAccess      String?
  role             String      @default("Member")
  plan             String      @default("Free")
  stripeCustomerId String?
  emailVerified    Boolean     @default(false)
  firstAccess      Boolean     @default(true)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  pushTokens       PushToken[]
  stores           Store[]

  @@map("users")
}

model Catalog {
  id             Int            @id @default(autoincrement())
  name           String
  normalPrice    Float
  suggestedPrice Float
  category       String
  barcode        String?
  imgUrl         String?
  brand          String?
  company        String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  storeProducts  StoreProduct[]

  @@map("catalog")
}

model Store {
  id                  String               @id @default(uuid())
  name                String               @unique
  subdomain           String               @unique
  address             String
  phone               String?
  primaryColor        String               @default("#fc5800")
  bannerId            String?
  userId              String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  orders              Order[]
  pushTokens          PushToken[]
  storeProductCustoms StoreProductCustom[]
  storeProducts       StoreProduct[]
  banner              Banner?              @relation(fields: [bannerId], references: [id])
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("stores")
}

model StoreProduct {
  id            String      @id @default(uuid())
  name          String
  price         Float
  quantity      Int         @default(0)
  catalogPrice  Float?
  catalogId     Int?
  barcode       String
  category      String?
  imgUrl        String?
  cost_price    Float?
  validity_date DateTime?
  status        String?     @default("active")
  brand         String
  company       String
  storeId       String
  type          String      @default("catalog")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  campoTest     String?
  orderItems    OrderItem[]
  catalog       Catalog?    @relation(fields: [catalogId], references: [id])
  store         Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([storeId, catalogId])
  @@map("store_products")
}

model StoreProductCustom {
  id            String      @id @default(uuid())
  name          String
  price         Float
  quantity      Int         @default(0)
  barcode       String
  category      String?
  imgUrl        String?
  cost_price    Float?
  validity_date DateTime?
  status        String?     @default("active")
  brand         String?
  company       String
  storeId       String
  type          String      @default("custom")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]
  store         Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("store_product_customs")
}

model Order {
  id                   String      @id @default(uuid())
  orderNumber          String      @unique
  status               String      @default("Approved")
  total                Float
  customerName         String?
  customerPhone        String?
  paymentMethod        String      @default("Pix")
  isDelivery           Boolean     @default(false)
  deliveryStreet       String?
  deliveryNumber       String?
  deliveryNeighborhood String?
  storeId              String
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  items                OrderItem[]
  store                Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model OrderItem {
  id                   String              @id @default(uuid())
  quantity             Int
  price                Float
  name                 String
  imgUrl               String
  productType          String              @default("catalog")
  storeProductId       String?
  storeProductCustomId String?
  orderId              String
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  order                Order               @relation(fields: [orderId], references: [id], onDelete: Cascade)
  storeProductCustom   StoreProductCustom? @relation(fields: [storeProductCustomId], references: [id], onDelete: Cascade)
  storeProduct         StoreProduct?       @relation(fields: [storeProductId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Banner {
  id          String   @id @default(uuid())
  mobile_url  String
  desktop_url String
  text        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  stores      Store[]

  @@map("banners")
}

model PushToken {
  id         String    @id @default(uuid())
  token      String    @unique
  provider   String
  userId     String
  storeId    String
  deviceId   String?
  deviceName String?
  isActive   Boolean   @default(true)
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  store      Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token, storeId])
  @@map("push_tokens")
}
